<h1><%= @event.name %></h1>
<p class="event-category_list"><%= category_list(@event.categories) %></p>
<p class="event-image">
  <% for gallery in @event.galleries %>
    <% for resource in gallery.gallery_resources %>
      <%= image_tag resource.resource_file_name %>
    <% end %>
  <% end %>
</p>
<p><%= @event.description %></p>
