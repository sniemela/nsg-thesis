<header>
  <h1><%= @event.name %></h1>
</header>

<div id="event-nav" class="eventTab">
  <ul class="clearfix"> 
    <li><a href="#event-info"><%= t 'title.event_info' %></a></li> 
    <li><a href="#event-comments"><%= t 'title.comments' %></a></li>
    <li><a href="#event-gallery"><%= t 'title.gallery' %></a></li>
    <li><a href="#event-hotels"><%= t 'title.hotels' %></a></li>
  </ul>

  <div class="event_content">
    <div id="event-info" style="display: none">
      <% if @event.galleries.exists? %>
        <p class="event-image">
          <%= image_tag @event.galleries.first.gallery_resources.first.resource(:medium) %>
        </p>
      <% end %>
      <p class="event-description">
        <%= @event.description %>
      </p>

      <h2><%= t 'title.where' %></h2>
      <p>
        <%= @event.address %> <a id="inline" href="#map"><%= t('help.show_map') %></a><br />
        <%= @event.country %>

        <div style="display:none"><div id="map"><%= image_tag "http://maps.google.com/maps/api/staticmap?size=600x480&sensor=false&zoom=14&markers=#{@event.latitude}%2C#{@event.longitude}" %></div></div>
      </p>

      <p class="event-category_list">
        <%= category_list(@event.categories) %>
      </p>
    </div> 
  
    <div id="event-comments" style="display: none">
      <% if current_user %>
        <h2><%= t 'title.comment' %></h2>
        <%= render "comments/form" %>
      <% else %>
        <p><%= t 'help.not_logged_in_for_commenting' %></p>
      <% end %>
      <% if @event.comments.exists? %>
        <h1><%= t 'title.comments' %></h1>
        <%= render :partial => 'shared/comment', :collection => @event.comments.order('created_at ASC'), :locals => { :commentable => @commentable } %>
      <% end %>
    </div>
    
    <div id="event-gallery" style="display: none">
      <p>Image-gallery</p>
    </div>
    
    <div id="event-hotels" style="display: none">
      <h2><%= t 'help.show_hotels' %></h2>
      <p><%= link_to "Hotels.com", "http://www.hotels.com/search.do?destination=#{get_city(@event.address)}%2C#{@event.country}" %></p>
    </div>
  </div>
