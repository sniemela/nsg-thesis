<header>
  <h1>Latest events</h1>
</header>

<%- for event in @events -%>
<article id="event-<%= event.id %>" class="event">
  <header>
    <h1 id="event-name-<%= event.id %>"><%= link_to event.name, event %></h1>
    <p class="event-category_list"><%= category_list(event.categories) %></p>
    <p id="event-description-<%= event.id %>"><%= event.description %></p>
  </header>
</article>
<hr />
<%- end -%>
