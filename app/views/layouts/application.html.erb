<!DOCTYPE html>
<html>
<head>
  <title>Test310</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "http://localhost:1337/socket.io/socket.io.js" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
  <section id="user">
    <nav>
      <ul>
        <% if user_signed_in? %>
        <span><%= current_user.email %></span>
        <li><%= link_to "Settings", services_path %>
        <li><%= link_to "Sign out", signout_services_path %></li>
        <% else %>
        <span>Sign in with:</span>
        <li><%= link_to "Facebook", "/auth/facebook" %></li>
        <li><%= link_to "Twitter", "/auth/twitter" %></li>
        <li><%= link_to "Google", "/auth/google" %></li>
        <li><%= link_to "Other", signin_services_path %>
        <% end %>
      </ul>
    </nav>
  </section>

  <header id="page_header">
    <h1>Happen.</h1>
    <nav>
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Events", events_path %></li>
      </ul>
    </nav>
  </header>

  <section id="content">
    <section id="flash">
      <% flash.each do |key, value| %>
          <div class="flash <%= key %> round"><%= value %></div>
      <% end %>
    </section>

    <%= yield %>
  </section>
</div>

</body>
</html>
