<!DOCTYPE html>
<html>
<head>
  <title>Test310</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "http://localhost:1337/socket.io/socket.io.js" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
  <section id="user_nav">
    <% if current_user %>
      Welcome <%= current_user.name %>!
      <%= link_to "Sign out", signout_path %>
    <% else %>
      <%= link_to "Sign in", signin_path, :id => "signin" %>
    <% end %>
  </section>

  <header id="page_header">
    <h1>Happen.</h1>
    <nav>
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Events", events_path %></li>
      </ul>
    </nav>
  </header>

  <section id="content">
    <section id="flash">
      <% flash.each do |name, msg| %>
          <%= msg %>
      <% end %>
    </section>

    <%= yield %>
  </section>
</div>

</body>
</html>
