<!DOCTYPE html>
<html>
<head>
  <title>Test310</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "http://localhost:1337/socket.io/socket.io.js" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
  <section id="user_nav">
    <% if current_user %>
      Welcome <%= current_user.name %>!
      <%= link_to "Sign out", signout_path %>
    <% else %>
      <%= link_to "Sign in", signin_path, :id => "signin" %>
    <% end %>
  </section>

  <header id="page_header">
    <div class="top_group">
      <h1>Happen.</h1>

      <div class="recent_events">
        <span>Event name</span>
      </div>

      <nav id="user_nav">
        <ul>
          <li><a href="#">Log in</a></li>
          <li><a href="#">Sign up</a></li>
        </ul>
      </nav>
    </div>

    <div class="bottom_group">
      <nav id="page_nav">
        <ul>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Events", events_path %></li>
        </ul>
      </nav>
    </div>
  </header>

  <div id="content_wrapper">
    <section id="content">
      <section id="flash">
        <% flash.each do |name, msg| %>
            <%= msg %>
        <% end %>
      </section>

      <%= yield %>
    </section>
  </div>

  <aside>
    <section class="tagcloud">
      <header>
        <h1>Tags</h1>
      </header>
      <span>tags</span> <span>tags</span> <span>tags</span> <span>tags</span> <span>tags</span>
    </section>

    <div class="advertises">
      <p>mainokset</p>
    </div>
  </aside>
</div>

</body>
</html>
